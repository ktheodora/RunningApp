<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/container"
android:layout_width="match_parent"
android:layout_height="match_parent">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/wallnewer"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/editText"
                android:layout_width="154dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="The Running App"
                android:textAlignment="gravity"
                android:textColor="#ffffff"
                android:textSize="40sp" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="#00000000"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/ourlogo" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="120dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/usrnameicon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/usrname" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:hint="Username"
                android:textColor="#000000"
                android:inputType="textPersonName"
                android:textSize="20sp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/passkeyicon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_weight="1"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/passkey" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:textSize="20sp"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/incorrectinfo"
            android:layout_width="228dp"
            android:layout_height="39dp"
            android:layout_marginTop="8dp"
            android:textSize="15sp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/tvinfo"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginTop="8dp"
            android:textSize="15sp"
            android:layout_gravity="center"
            />


        <Button
            android:id="@+id/login"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/action_sign_in"
            android:background="#90A4AE"
            android:textColor="#ffffff"
            android:textSize="15sp"
            />

        <Button
            android:id="@+id/backbtn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="@string/backtomain"
            android:background="#90A4AE"
            android:textColor="#ffffff"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/userUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>
</ScrollView>
</android.support.v4.widget.DrawerLayout>